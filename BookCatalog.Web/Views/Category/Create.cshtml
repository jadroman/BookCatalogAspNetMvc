@model BookCatalog.Web.Models.ViewModels.Category.CategoryEditViewModel

<h1 style="margin-bottom:20px;margin-top: 5px">New category</h1>
<hr />
<div class="row">
    <form asp-action="Create" autocomplete="off" class="card card-body bg-light mt-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Category.Name" class="control-label"></label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <input asp-for="Category.Name" class="form-control form-control-sm" />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-auto">
                    <a class='btn btn-outline-secondary' asp-action="Index">Back to List</a>
                </div>
                <div class="col-md-auto">
                    <input type="submit" value="Save" class="btn btn-outline-success" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
