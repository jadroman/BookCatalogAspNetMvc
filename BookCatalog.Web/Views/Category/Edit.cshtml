@model CategoryEditViewModel

    <div class="row justify-content-center">
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-auto mb-1 mt-2">
                    <h2>Edit category</h2>
                </div>
            </div>
            <form asp-action="Edit" autocomplete="off" class="card card-body bg-light mt-1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Category.Id" />
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-12">
                            <label asp-for="Category.Name" class="control-label"></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <input asp-for="Category.Name" class="form-control form-control-sm" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-auto">
                            <a class='btn btn-outline-secondary' asp-action="Index">Back to List</a>
                        </div>
                        <div class="col-sm-auto">
                            <input type="submit" value="Save" class="btn btn-outline-success" />
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
