@model CategoryDetailsViewModel

<h1 style="margin-bottom:20px;margin-top: 5px">Are you sure you want to delete this category?</h1>

<div class="row">
    <div class="card card-body bg-light mt-5">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.Category.Name)</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Category.Name)
                </div>
            </div>
        </div>

        <div class="form-group">
            <form asp-action="Delete">
                <div class="row">
                    <div class="col-md-auto">
                        <input type="hidden" asp-for="Category.Id" />
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
                    </div>
                    <div class="col-md-auto">
                        <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
