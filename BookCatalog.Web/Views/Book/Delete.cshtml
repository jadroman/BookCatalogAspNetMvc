@model BookDetailsViewModel

<h1 style="margin-bottom:20px;margin-top: 5px">Are you sure you want to delete this category?</h1>
<hr />
<div class="row">

    <div class="card card-body bg-light mt-5">
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.Book.Title)</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Book.Title)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.Book.Author)</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Book.Author)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.Book.Category)</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Book.Category.Name)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.Book.Collection)</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Book.Collection)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.Book.Read)</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @(Model.Book.Read ? "Yes" : "No")
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.Book.Note)</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Book.Note)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.Book.Year)</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Book.Year)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(model => model.Book.Publisher)</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Book.Publisher)
                </div>
            </div>
        </div>

        <div class="form-group">
            <form asp-action="Delete">
                <div class="row">
                    <div class="col-md-auto">
                        <input type="hidden" asp-for="Book.Id" />
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
                    </div>
                    <div class="col-md-auto">
                        <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
