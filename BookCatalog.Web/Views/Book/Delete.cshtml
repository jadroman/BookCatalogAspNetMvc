@model BookCatalog.Web.Models.ViewModels.Book.BookDetailsViewModel

<h1 style="margin-bottom:20px;margin-top: 5px">Are you sure you want to delete this category?</h1>
<hr />
<div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Collection)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Collection)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Read)
        </dt>
        <dd class="col-sm-10">
            @(Model.Book.Read ? "Yes" : "No")
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Note)
        </dd>
    </dl>
</div>
<hr />
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Book.Id" />
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
        <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm" /> 
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
