@model BookDetailsViewModel

<h1 style="margin-bottom:20px;margin-top: 5px">Book details</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Category.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Collection)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Collection)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Read)
        </dt>
        <dd class="col-sm-10">
            @(Model.Book.Read ? "Yes" : "No")
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Note)
        </dd>
    </dl>
</div>
<hr />
<div>
    <a class="btn btn-outline-secondary  btn-sm" asp-action="Index">Back to List</a>
    <a class="btn btn-outline-success  btn-sm" asp-action="Edit" asp-route-id="@Model.Book.Id">Edit</a> 
</div>
